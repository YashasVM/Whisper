<Window x:Class="WhisperByYashasVM.UI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Whisper -By YashasVM Settings"
        Width="560"
        Height="440"
        WindowStartupLocation="CenterScreen"
        Background="#090A0D"
        Foreground="#F0F1F3">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Whisper -By YashasVM"
                   FontSize="22"
                   FontWeight="SemiBold"/>

        <TextBlock Grid.Row="1"
                   Margin="0,12,0,0"
                   Text="Shortcut: Win+Y (press to start, auto-stop on silence)"
                   Opacity="0.9"/>

        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <TextBlock Text="Model variant"/>
            <ComboBox x:Name="ModelVariantComboBox" Margin="0,6,0,0" Width="240">
                <ComboBoxItem Content="base.en"/>
                <ComboBoxItem Content="small.en"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,16,0,0">
            <TextBlock Text="Model storage path"/>
            <DockPanel Margin="0,6,0,0">
                <TextBox x:Name="ModelPathTextBox" MinWidth="360" VerticalContentAlignment="Center"/>
                <Button x:Name="BrowseButton" Width="90" Margin="10,0,0,0" Content="Browse"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,16,0,0">
            <TextBlock Text="Silence timeout (ms)"/>
            <TextBox x:Name="SilenceTimeoutTextBox" Margin="0,6,0,0" Width="120"/>
            <CheckBox x:Name="StartWithWindowsCheckBox" Margin="0,10,0,0" Content="Start with Windows"/>
        </StackPanel>

        <TextBlock Grid.Row="5"
                   Margin="0,20,0,0"
                   TextWrapping="Wrap"
                   Opacity="0.75"
                   Text="Output mode: auto-paste into focused input while preserving clipboard best-effort backup."/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="SaveButton" Width="90" Height="32" Content="Save"/>
        </StackPanel>

        <TextBlock Grid.Row="7"
                   HorizontalAlignment="Right"
                   Opacity="0.45"
                   Margin="0,16,0,0"
                   Text="Made by @Yashas.VM"/>
    </Grid>
</Window>
