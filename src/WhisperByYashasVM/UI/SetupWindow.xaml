<Window x:Class="WhisperByYashasVM.UI.SetupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Whisper Setup"
        Width="640"
        Height="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#0D1118"
        Foreground="#F3F6FB">
    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Whisper First-Run Setup" FontSize="26" FontWeight="SemiBold"/>

        <Border x:Name="WarningBorder"
                Grid.Row="1"
                Margin="0,14,0,0"
                Padding="14"
                BorderBrush="#B24646"
                BorderThickness="1"
                Background="#331A1A"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Minimum requirements not met on this machine."
                           FontWeight="SemiBold"
                           Foreground="#FFD4D4"/>
                <TextBlock x:Name="WarningText"
                           Margin="0,8,0,0"
                           TextWrapping="Wrap"
                           Foreground="#FFC9C9"/>
                <CheckBox x:Name="ContinueAnywayCheckBox"
                          Margin="0,10,0,0"
                          Foreground="#FFE5E5"
                          Content="I understand. Continue anyway."/>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Margin="0,14,0,0">
            <TextBlock Text="Model variant"/>
            <ComboBox x:Name="ModelVariantComboBox" Margin="0,6,0,0" SelectedIndex="0">
                <ComboBoxItem Content="base.en (recommended quality)"/>
                <ComboBoxItem Content="small.en (higher quality, heavier)"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,14,0,0">
            <TextBlock Text="Model storage path"/>
            <DockPanel Margin="0,6,0,0">
                <TextBox x:Name="ModelPathTextBox" MinWidth="420" VerticalContentAlignment="Center"/>
                <Button x:Name="BrowseButton" Width="96" Margin="10,0,0,0" Content="Browse"/>
            </DockPanel>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,14,0,0">
            <CheckBox x:Name="StartWithWindowsCheckBox" Content="Start Whisper when I sign in"/>
        </StackPanel>

        <StackPanel Grid.Row="5" Margin="0,14,0,0">
            <TextBlock Text="Model download status"/>
            <ProgressBar x:Name="ModelProgressBar" Margin="0,6,0,0" Height="18" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="ModelProgressText" Margin="0,6,0,0" Opacity="0.85" Text="Ready"/>
        </StackPanel>

        <StackPanel Grid.Row="6" Margin="0,16,0,0" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="DownloadButton" Width="130" Height="34" Margin="0,0,10,0" Content="Download Model"/>
            <Button x:Name="ContinueButton" Width="130" Height="34" Content="Continue"/>
        </StackPanel>
    </Grid>
</Window>
